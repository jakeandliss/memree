<h2>Register for MemryBook</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div id="form_first">
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, :class=> "validate[required, custom[email]]"  %>
	  </div>

	  <div class="field">
	    <%= f.label :password %>
	    <% if @validatable %>
	    <em>(<%= @minimum_password_length %> characters minimum)</em>
	    <% end %><br />
	    <%= f.password_field :password, autocomplete: "off", :class=>"validate[required]" %>
	  </div>

	  <div class="field">
	    <%= f.label :password_confirmation %><br />
	    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"validate[required,equals[user_password]]"  %>
	  </div>
 	</div>
  	<div id="form_second">  
  		<div class="field">
	    	<%= f.label :first_name, "First Name" %>
	    	<%= f.text_field :first_name, :class=>"validate[required]" %>
	  	</div>
	  	<div class="field">
	    <%= f.label :last_name, "Last Name" %>
	    <%= f.text_field :last_name, :class=> "validate[required]" %>
	 </div>
    	<%= f.label :avatar, "Add Profile Photo" %>
    	<%= f.file_field :avatar %> 
  	</div>
  	<div id="form_third">
  	</div>  
  
    	<%= f.submit "Register", class: "button", :id =>"form_submit" %>
 <% end %>
