<%= form_for [@title, @entry], remote: true, authenticity_token: true do |f| %>
	<%= f.text_area :entry, id: "wysiwyg", placeholder: "Add more to this entry here...", rows: 5  %>

    <div id="dropzone" class="dropzone-custom">
      <div class="dz-default dz-message"><span>Drop files here to upload</span></div>
    </div>
    <br/>
	<div class="action">
		<%= f.submit 'Save Entry', class: "button", id: "submit_button" %>
	</div>
	
<% end %>