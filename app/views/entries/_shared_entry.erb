<% unless shared.nil? %>
<div id="<%= dom_id(entry) %>" class="row">
	<div class="medium-9 columns">
		<div class="white box-shadow title">
			<div class="header">
				<div class="date">
						<div class="calendar"><month><%= shared.entry.title_date.to_date.strftime('%b') if shared.entry.title_date.present? %></month><day><%= shared.entry.title_date.to_date.strftime('%e') if shared.entry.title_date.present? %></day><year><%= shared.entry.title_date.to_date.strftime('%Y') if shared.entry.title_date.present? %></year>
						</div>		
				</div>
				<h3>
					<%= truncate(shared.entry.title, length: 63) %>
				</h3>
			</div>
			<div class="content clearfix">
				<div class="title_entry">
					<% if shared.entry.content.length > 180 %>
						<div id="entry_truncate_<%= shared.entry.id %>">
						    <%= truncate_html(shared.entry.content.html_safe, length: 180) %>
						    <%= link_to '...Read more', '', class: "read-more-#{shared.entry.id}" %>
						</div>
						<div id="entry_long_<%= shared.entry.id %>" style="display:none;">
						    <%= simple_format(shared.entry.content) %>
						    <%= link_to '...Read less', '', class: "read-less-#{shared.entry.id}", style: "float:right;" %>
						</div>
					<% else %>
						<%= shared.entry.content.html_safe %>
					<% end %>
					<script>
					  	$('.read-more-<%= shared.entry.id %>').on('click', function(e) {
					    e.preventDefault()
					    $('#entry_truncate_<%= shared.entry.id %>').toggle();
					    $('#entry_long_<%= shared.entry.id %>').toggle();
					})
					</script>
					<script>
					  	$('.read-less-<%= shared.entry.id %>').on('click', function(e) {
					    e.preventDefault()
					    $('#entry_truncate_<%= shared.entry.id %>').toggle();
					    $('#entry_long_<%= shared.entry.id %>').toggle();
					  })
					</script>
				</div>
				<div id="entry_<%= shared.entry.id %>_thumbnails" class="entry_image_thumbnails">
					<% shared.entry.resources.each do |i| %>
						<% if i.avatar_content_type.present? && (i.avatar_content_type.include? "image") %>
							<div><%= image_tag i.avatar.url(:thumb) %>
								<%= link_to '<i class="fa fa-external-link-square"></i>'.html_safe, i.avatar.url, class: "light_#{shared.entry.id} mfp-image" %>
							</div>
						<% elsif (i.avatar_content_type.present? && (i.avatar_content_type.include? "video") && (i.avatar_content_type.exclude? "image")) %>
							<div><%= image_tag i.avatar.url(:thumb) %>
								<%= link_to '<i class="fa fa-external-link-square"></i><i class="fa fa-play-circle"></i>'.html_safe, i.avatar.url(:original), class: "light_#{shared.entry.id} mfp-iframe" %>
							</div>
						<% end %>
					<% end %>
				</div>
					<script>
					$('.light_<%= shared.entry.id %>').magnificPopup({
						gallery: {
							enabled: true
						}
					});
					</script>

				<div class="delete-x">
					<%= link_to "<i class=\"fa fa-pencil-square-o\"></i>".html_safe, edit_entry_path(entry), remote: true %>
					<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, entry_path(entry), method: :delete, data: {confirm: 'Are you sure?' }, remote: true %>
				</div>
				<% shared.entry.resources.each do |i| %>
					<% if i.avatar_content_type.include? "application" %>
						<i class="fa fa-file-pdf-o pointer" id="application_icon_<%= shared.entry.id %>" style="float:right;font-size:1.5rem;padding-left:.5rem;"></i>
						<% break %>
					<% end %>
				<% end %>
				<% shared.entry.resources.each do |i| %>
					<% if i.avatar_content_type.include? "audio" %>
						<i class="fa fa-music pointer" id="audio_icon_<%= shared.entry.id %>" style="float:right;font-size:1.5rem;padding-left:.5rem;"></i>
						<% break %>
					<% end %>
				<% end %>
			</div>
			<div id="entry_<%= shared.entry.id %>_application" class="entry_application_thumbnails clearfix hide">
				<% shared.entry.resources.each do |i| %>
					<% if i.avatar_content_type.include? "application" %>
						<div class="application">
							<%= link_to '<i class="fa fa-file-text"></i>'.html_safe, i.avatar.url, class: "light_#{shared.entry.id}_application mfp-iframe" %>
							<span><%= truncate(i.avatar_file_name, length: 27) %></span>
						</div>
					<% end %>
				<% end %>
			</div>
			<div id="entry_<%= shared.entry.id %>_audio" class="entry_application_thumbnails clearfix hide">
				<% shared.entry.resources.each do |i| %>
					<% if i.avatar_content_type.include? "audio" %>
						<div class="audio">
							<span><%= i.avatar_file_name %></span>
							<%= audio_tag i.avatar.url(:original), controls: true %>
							<%= link_to '<i class="fa fa-external-link-square playing"></i>'.html_safe, '#', alt: "Click to play in sidebar", class: "playing" %>
							<%= link_to '<i class="fa fa-times stop"></i>'.html_safe, '#', class: "hide" %>
						</div>
					<% end %>
				<% end %>
			</div>
			<script>
			$('i#application_icon_<%= shared.entry.id %>').on ('click', function(e) {
				e.preventDefault()
				$('#entry_<%= shared.entry.id %>_application').slideToggle("fast");
				$('#entry_<%= shared.entry.id %>_audio').slideUp("fast");
			})	
			</script>
			<script>
			$('i#audio_icon_<%= shared.entry.id %>').on ('click', function(e) {
				e.preventDefault()
				$('#entry_<%= shared.entry.id %>_audio').slideToggle("fast");
				$('#entry_<%= shared.entry.id %>_application').slideUp("fast");
			})
			</script>
		</div>
	</div>
	<div class="medium-3 columns" style="padding-left:0;">
		<div class="footer">
			<% if shared.entry.tags.present? %>
				<h5>
					<ul>
						<ul>
							<% shared.entry.tags.each do |tag| %>
								<li> 
									<%= link_to tag.name, entries_path(tag: tag.name), remote: true, :data => {:tagname=>tag.name} %>
								</li>
							<% end %>
						</ul>
					</ul>
				</h5>
			<% end %>
			<!-- <div id="shared_users">
				<%= image_tag current_user.avatar.url(:avatar) %>
				<%= link_to "<i class=\"fa fa-share-alt\"></i>".html_safe, "#", :title_id => shared.entry.id, class: "right" %>
			</div> -->
		</div>
	</div>
</div>
<% end %>