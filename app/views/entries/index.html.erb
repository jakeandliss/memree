<div id="entries">
	<div id="success"></div>
	<div class="row wrapper">
		<div class="medium-3 columns">
			<div class="user_info hide-for-small-only">
				<div class="avatar clearfix">
					<div class="row medium-collapse">
						<div class="medium-5 columns">
							<%= image_tag current_user.avatar.url(:avatar) %>
							<%#= image_tag current_user.gravatar_url %>
						</div>
						<div class="medium-7 columns">
							<p><%= current_user.full_name  %><br />
								<%= link_to "Edit Profile", edit_user_path(current_user, form: "profile") %>
							</p>
						</div>
					</div>
				</div>
			</div>
			<div id="label_titles">
				<ul>
					<li class="<%= 'active' if current_page?(entries_path) %>">
						<%= link_to '<i class="fa fa-bookmark"></i>&nbsp All Entries'.html_safe, entries_path, remote: true %>
					</li>
					<div id="tag-list">

					</div>

				</ul>
				<div class="clearfix"><%= link_to "Edit Labels", tags_path, class: "edit left" %>
				<i class="fa fa-search right pointer" style="padding-top:.3rem;"></i></div>
			</div>
			<div id="playing_area"></div>
		</div>
		<div class="medium-9 columns">

			<div class="form clearfix" id="title_form">
				<%= render 'form' %>
			</div>
			<%= render 'search' %>
			<div id="entries-wrapper">
				<%= render partial: "entries" %>
			</div>
			<div class="scroll-pagination">
				<%= will_paginate @all_entries %>
			</div>
			<div class="question clearfix" style="padding-bottom:2rem;">
				<i class="fa fa-question-circle right pointer"></i>
			</div>
			<% if @all_entries.any? %>
				<div class="intro hide">
			<% else %>
				<div class="intro">
			<% end %>
				<h2><i class="fa fa-arrow-circle-o-up fa-3x"></i> <span>Create your first entry, it's easy...</span></h2>
				<ol>
					<li>Give it a quick title. </li>
					<li>Write something you'd like to remember.</li>
					<li>Add a label so you can easily find it later (more about labels <%= link_to "here", tags_path, class: "underline" %>)</li>
				</ol>
				<ul>
					<b><u>A couple more options to make your experience even better:</u></b>
					<li>Change the date if you'd like (just click on it)</li>
					<li>Add some media. Add images, video, audio, and pdf documents (just click or drag).</li>
					<li>Click the <i class="fa fa-search"></i> on the sidebar to access the search feature. You'll find it's quite useful.</li>
				</ul>
			</div>
			<div class="row">
				<div class="medium-9 column">
					<div class="image-loader">
						<center><i class="fa fa-refresh fa-spin"></i></center>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= render "contact_form/feedback" %>
</div>

<script>


	// Load all tags and put them on sidebar
	// TagManager class is located in app/vendor/assets/tag-manager.js
	var tagManager = new TagManager();
	tagManager.initialize("<%= j current_user.tags.hierarchy_tree.html_safe  %>", $("#tag-list"));


</script>
