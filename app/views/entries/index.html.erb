<div id="titles">
	<div class="row wrapper">
		<div class="medium-3 columns">
			<div class="user_info hide-for-small-only">
				<div class="avatar clearfix">
					<div class="row medium-collapse">
						<div class="medium-5 columns">
							<%= image_tag current_user.avatar.url(:avatar) %>
							<%#= image_tag current_user.gravatar_url %>
						</div>
						<div class="medium-7 columns ">
							<p><%= current_user.full_name  %><br />
								<%= link_to "Edit Profile", edit_user_path(current_user, form: "profile") %>
							</p>
						</div>
					</div>
				</div>
			</div>
			<div id="journal_titles" class="hide-for-small-only">
				<ul>

					<li class="<%= 'active' if current_page?(entries_path) %>">
						<%= link_to '<i class="fa fa-bookmark"></i>&nbsp All Journals'.html_safe, entries_path, remote: true %>
					</li>
					<div id="tag-list">
						
					</div>

				 		
				</ul>
			</div>
			<%= render 'search' %>
			<div id="playing_area"></div>
		</div>
		<div class="medium-9 columns">
			<div class="form clearfix" id="title_form">
				<%= render 'form' %>
			</div>
			<div class="show-for-small-only">
				<div id="journal_titles">
					<h4><%= image_tag('feather.png') %><%= current_user.first_name %>'s Journals</h4>
					<ul>
						<li class="<%= 'active' if current_page?(entries_path) %>"><%= link_to 'All Journals', entries_path %></li>
					 	<%= render partial: "tags", locals: { tags: @tags.roots } %>	
					</ul>
				</div>
			</div>
			<div id="titles-wrapper">
				<%= render partial: "entries" %>
			</div>
			<div class="scroll-pagination">
				<%= will_paginate @entries %>
			</div>
			<div class="image-loader">
				<center><i class="fa fa-refresh fa-spin"></i></center>
			</div>

		</div>
	</div>
</div>

<script>

	
	// Load all tags and put them on sidebar
	// TagManager class is located in app/assets/tag-manager.js
	var tagManager = new TagManager();
	tagManager.initialize('<%= current_user.tags.hierarchy_tree.html_safe  %>', $("#tag-list"));

</script>