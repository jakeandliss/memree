<div id="entries">
	<div class="row wrapper">
		<div class="medium-2 columns">
			<div class="user_info">
				<div class="avatar">
					<%= image_tag @user.avatar.url(:avatar) %>
				</div>
				<p><%= current_user.full_name  %></p>
			</div>
			<div class="user_journals">
				<p>Journals</p>
				<p><%= link_to 'All', titles_path %></p>
			</div>

		</div>
		<div class="medium-10 columns">
			<div class="header clearfix">	
				
				<h2><%= best_in_place @title, :title %></h2>
				<p style="float:left;margin-bottom:0;"><%= best_in_place @title, :title_date %></p>		
				<p style="float:right;"><%= link_to 'Delete Event', title_path(@title), method: :delete, data: {confirm: 'Are you sure?' } %></p><br />
			<div class="form">		
				<%= render 'form' %>
			</div>
		<% @title.entries.each do |e| %>
			<div class="entry">
				<div id="<%= dom_id(e) %>">
					<div class="content">
							<p><%= e.entry %></p>
							<p><%= image_tag e.image.url(:medium) if e.image.file? %></p>		
						<div class="footer">
							<p style="float:left;"><%= link_to "Edit", edit_title_entry_path(@title, e) %></p>
							<p style="float:right;"><%= link_to 'Delete', title_entry_path(@title, e), method: :delete, data: {confirm: 'Are you sure?' } %></p><br />
						</div>
					</div>
				</div>
			</div>
		<% end %>
		</div>
	</div>
</div>