<div id="titles">
	<div id="success"></div>
	<div class="row wrapper">
		<div class="medium-3 columns">
			<div class="user_info hide-for-small-only">
				<div class="avatar clearfix">
					<div class="row medium-collapse">
						<div class="medium-5 columns">
							<%= image_tag current_user.avatar.url(:avatar) %>
						</div>
						<div class="medium-7 columns">
							<p><%= current_user.full_name  %><br />
								<%= link_to "Edit Profile", edit_user_path(current_user, form: "profile") %>
							</p>
						</div>
					</div>
				</div>
			</div>
			<div id="label_titles">
				<ul>
					<li class="<%= 'active' if current_page?(groups_path) %>">
						<%= link_to '<i class="fa fa-users"></i>&nbsp All Groups'.html_safe, groups_path %>
					</li>
					<div id="tag-list">
						<div class="nested-tags-right">
							<% @groups.each do |group| %>
								<li class="root collapsed <%= params[:g_id] == group.id.to_s ? 'active' : '' %>">
									<%= link_to group.name, groups_path(g_id: group.id), class: params[:g_id] == group.id.to_s ? 'active' : '' %>
								</li>
							<% end %>
						</div>
					</div>
				</ul>
			</div>
			<div id="playing_area"></div>
		</div>
		<div class="medium-9 columns">
			<div class="white box-shadow title">
				<div class="header">
					<h3>Groups</h3>
					<%= link_to "Add New Group", new_group_path, class: "button small right", remote: true %>
				</div>
			</div>
			<div id="groups-area">
				<% grp = params[:g_id] && current_user.groups.find(params[:g_id]) %>
				<% if grp %>
					<%= render 'group', group: grp %>
				<% else %>
					<%= render @groups %>
				<% end %>
			</div>
		</div>
	</div>
</div>
