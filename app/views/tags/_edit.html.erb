<%= form_for @tag, remote: true do |f| %>
	<div class="row collapse">
		<div class="medium-4 columns">
			<%= f.collection_select :parent_id, current_user.tags.where.not(:id => @tag.subtree_ids), :id, :name, :include_blank => "My Journals" %>
		</div>
		<div class="small-5 columns">
			<p><%= f.text_field :name, placeholder: "Enter new Journals (separated by commas)", class: "no_background" %></p>
		</div>
		<div class="action small-3 columns">
			<%= f.submit 'Update Journal', class: "button sml", remote: true %>
		</div>
		<%= link_to "Cancel", '#', id: "cancel_#{@tag.id}" %>
	</div>
	<script>
	$('#cancel_<%= @tag.id %>').on('click', function(e) {
                    e.preventDefault()
    $('#tag_<%= @tag.id %>').show();
    $('form#edit_tag_<%= @tag.id %>').remove();
  	});
	</script>
<% end %>
