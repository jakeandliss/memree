<div class="row">
	<div class="medium-4 columns">
	 	
	 		<%= render 'users/user_sidebar' %>
			<%= render 'users/user_nav' %>  
	</div>
	<div class="medium-8 columns white box-shadow">  
		<div id="journals">
			<h3>My Journals</h3>
			<%= render 'tags/form' %>
			<div id="journal_added"></div>
			<% @tags.roots.each do |t| %>
				<ul class="clearfix">
					<li id="tag_<%= t.id %>">
						<h4><%= t.name %></h4>
						<%= link_to "Add Subjournal", new_tag_path(:parent_id => t) %>
						<p><%= link_to "Edit Journal", edit_tag_path(t), remote: true %> <%= link_to 'Delete', tag_path(t), method: :delete, data: {confirm: 'Are you sure?' }, remote: true %></p>
						<div id="sub-menu">
							<% if t.children? %>
								<% t.children.each do |c| %>
									<ul class="clearfix">
										<li id="tag_<%= c.id %>">
											<h4><%= c.name %></h4>
											<%= link_to "Add Subjournal", new_tag_path(:parent_id => c) %>
											<p><%= link_to "Edit Journal", edit_tag_path(t), remote: true %> <%= link_to 'Delete', tag_path(c), method: :delete, data: {confirm: 'Are you sure?' }, remote: true %></p>
										</li>
									</ul>
								<% end %>
							<% end %>
						</div>
					</li>
				</ul>
			<% end %>
		</div>
	</div>
</div> 

