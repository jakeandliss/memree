<%= form_for @title do |f| %>
	<%= f.text_field :title, placeholder: "Entry Title" %>
		<%= f.fields_for :entries, @entries do |e| %>
			<%= e.text_area :entry, placeholder: "Your entry goes here..." %>
			<%= e.file_field :image %>
		<% end %>
	<%= f.text_field :all_tags, class: "typeahead" %>	
	<%= f.date_select :title_date, :order => [:day, :month, :year] %>
	<div class="action">
		<%= f.submit 'Save Entry', class: "button small right" %>
	</div>
<% end %>
