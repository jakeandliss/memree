<div id="<%= dom_id(title) %>" class="row">
	<div class="medium-9 columns">
		<div class="white box-shadow title">
			<div class="header">
				<div class="date">
						<div class="calendar"><month><%= title.title_date.to_date.strftime('%b') if title.title_date.present? %></month><day><%= title.title_date.to_date.strftime('%e') if title.title_date.present? %></day><year><%= title.title_date.to_date.strftime('%Y') if title.title_date.present? %></year>
						</div>		
				</div>
				<h3>
					<%= truncate(title.title, length: 63) %>
				</h3>
			</div>
			<div class="content clearfix">
				<div class="title_entry">
					<% if title.entry.length > 180 %>
						<div id="entry_truncate_<%= title.id %>">
						    <%= truncate_html(title.entry.html_safe, length: 180) %>
						    <%= link_to '...Read more', '', class: "read-more-#{title.id}" %>
						</div>
						<div id="entry_long_<%= title.id %>" style="display:none;">
						    <%= simple_format(title.entry) %>
						    <%= link_to '...Read less', '', class: "read-less-#{title.id}", style: "float:right;" %>
						</div>
					<% else %>
						<%= title.entry.html_safe %>
					<% end %>
					<script>
					  	$('.read-more-<%= title.id %>').on('click', function(e) {
					    e.preventDefault()
					    $('#entry_truncate_<%= title.id %>').toggle();
					    $('#entry_long_<%= title.id %>').toggle();
					})
					</script>
					<script>
					  	$('.read-less-<%= title.id %>').on('click', function(e) {
					    e.preventDefault()
					    $('#entry_truncate_<%= title.id %>').toggle();
					    $('#entry_long_<%= title.id %>').toggle();
					  })
					</script>
				</div>
				<div id="entry_<%= title.id %>_thumbnails" class="entry_image_thumbnails">
					<% title.images.each do |i| %>
						<% if i.avatar_content_type.include? "image" %>
							<div><%= image_tag i.avatar.url(:medium) %>
								<%= link_to '<i class="fa fa-external-link-square"></i>'.html_safe, i.avatar.url, class: "light_#{title.id} mfp-image" %>
							</div>
						<% elsif ((i.avatar_content_type.include? "video") && (i.avatar_content_type.exclude? "image")) %>
							<div><%= image_tag i.avatar.url(:medium) %>
								<%= link_to '<i class="fa fa-external-link-square"></i><i class="fa fa-play-circle"></i>'.html_safe, i.avatar.url(:video), class: "light_#{title.id} mfp-iframe" %>
							</div>
						<% end %>
					<% end %>
				</div>
					<script>
					$('.light_<%= title.id %>').magnificPopup({
						gallery: {
							enabled: true
						}

							// other options
						});
					</script>
				<% if title.images.count(:imageable_id) == 1 %>
					<script>
					$('#entry_<%= title.id %>_thumbnails').slick({
						  initialSlide: -1,
						  slidesToShow: 1,
						  centerPadding: "25%",
						  focusOnSelect: true,
						  arrows: false,
						  centerMode: true,
						});
					</script>
				<% else %>
					<script>
						$('#entry_<%= title.id %>_thumbnails').slick({
						  slidesToShow: 1,
						  centerPadding: "25%",
						  focusOnSelect: true,
						  arrows: false,
						  centerMode: true,
						});
					</script>
				<% end %>
				<div class="delete-x">
					<%= link_to "<i class=\"fa fa-pencil-square-o\"></i>".html_safe, edit_title_path(title), remote: true %>
					<%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, title_path(title), method: :delete, data: {confirm: 'Are you sure?' }, remote: true %>
				</div>
				<% title.images.each do |i| %>
					<% next unless i.avatar_content_type.include? "application" %>
						<i class="fa fa-file-text pointer" id="application_icon_<%= title.id %>" style="float:right;font-size:1.5rem;padding-left:.5rem;"></i>

				<% end %>
				<% title.images.each do |i| %>
					<% next unless i.avatar_content_type.include? "audio" %>
						<i class="fa fa-music pointer" id="audio_icon_<%= title.id %>" style="float:right;font-size:1.5rem;padding-left:.5rem;"></i>
				<% end %>
			</div>
			<div id="entry_<%= title.id %>_application" class="entry_application_thumbnails clearfix hide">
				<% title.images.each do |i| %>
					<% if i.avatar_content_type.include? "application" %>
						<div class="application">
							<%= link_to '<i class="fa fa-file-text"></i>'.html_safe, i.avatar.url, class: "light_#{title.id}_application mfp-iframe" %>
							<span><%= truncate(i.avatar_file_name, length: 27) %></span>
						</div>
					<% end %>
				<% end %>
			</div>
			<div id="entry_<%= title.id %>_audio" class="entry_application_thumbnails clearfix hide">
				<% title.images.each do |i| %>
					<% if i.avatar_content_type.include? "audio" %>
						<div class="audio">
							<span><%= i.avatar_file_name %></span>
							<%= audio_tag i.avatar.url(:audio), controls: true %>
							<%= link_to '<i class="fa fa-external-link-square playing"></i>'.html_safe, '#', alt: "Click to play in sidebar" %>
							<%= link_to '<i class="fa fa-times stop"></i>'.html_safe, '#', class: "hide" %>
						</div>
					<% end %>
				<% end %>
			</div>
			<script>
			$('i#application_icon_<%= title.id %>').on ('click', function(e) {
				e.preventDefault()
				$('#entry_<%= title.id %>_application').slideToggle("fast");
				$('#entry_<%= title.id %>_audio').slideUp("fast");
			})	
			</script>
			<script>
			$('i#audio_icon_<%= title.id %>').on ('click', function(e) {
				e.preventDefault()
				$('#entry_<%= title.id %>_audio').slideToggle("fast");
				$('#entry_<%= title.id %>_application').slideUp("fast");
			})
			</script>
			<div class="footer show-for-small-only">
				<div class="row">
					<div class="small-6 columns">
						<% if title.tags.present? %>
							<h5>
								<ul>
									<ul>
										<% title.tags.each do |tag| %>
											<li> 
												<%= link_to tag.name, tag_path(tag.id) %>
											</li>
										<% end %>
									</ul>
								</ul>
							</h5>
						<% end %>
					</div>
					<div class="small-6 columns">
						<div id="shared_users">
							<%= image_tag current_user.avatar.url(:avatar) %>
							<p style="float:right;"><%= link_to "Share", "#", :title_id => title.id %></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="medium-3 columns hide-for-small-only">
		<div class="footer">
			<% if title.tags.present? %>
				<h5>
					<ul>
						<ul>
							<% title.tags.each do |tag| %>
								<li> 
									<%= link_to tag.name, tag_path(tag.name), remote: true %>
								</li>
							<% end %>
						</ul>
					</ul>
				</h5>
			<% end %>
			<div id="shared_users">
				<%= image_tag current_user.avatar.url(:avatar) %>
				<%= link_to "Share", "#", :title_id => title.id %>
			</div>
		</div>
	</div>
</div>