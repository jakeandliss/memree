<div id="titles">
	<div class="row wrapper">
		<div class="medium-3 columns">
				<div class="user_info hide-for-small-only">
					<div class="avatar">
						<%= image_tag @user.avatar.url(:avatar) %>
						<%#= image_tag current_user.gravatar_url %>
					</div>
					<p><%= current_user.full_name  %></p>
				</div>
				<div id="journal_titles">
					<h4><%= image_tag('feather.png') %><%= @user.first_name %>'s Journals</h4>
					<ul>
						<li class="<%= 'active' if current_page?(titles_path) %>"><%= link_to 'All Journals', titles_path %></li>
				 		<% @tags.each do |t| %>
				 			<li class="<%= 'active' if current_page?(tag_path(t.name)) %>"><%= link_to t.name, tag_path(t.name) %></li>
						<% end %>
					</ul>
				</div>
		</div>
		<div class="medium-9 columns">
			<div class="form clearfix" id="title_form">
				<%= render 'form' %>
			</div>
			<div id="title_added"></div>
				<% @titles.each do |t| %>
					<div id="title">
						<div id="<%= dom_id(t) %>">
							<div class="header">
								<h3><%= link_to t.title, title_entries_path(t) %></h3>
								<p><%= t.title_date.to_date.strftime('%a, %B %e, %Y') if t.title_date.present? %></p>
							</div>
							<div class="content clearfix">
								<% t.entries.limit(4).each do |e| %>
										<div class="title_entry", >
											<div id="wrapper">
												<% e.images.limit(1).each do |i| %>
												<%= image_tag i.avatar.url(:medium) %>
											<% end %>		
											</div>
												<div style="padding:0 5px;"><%= truncate_html(e.entry.html_safe, :length => 85, :escape => false) %></div>
											</div>
								<% end %>
							</div>
							<div class="footer">
								<span style="float:right;"><%= link_to 'Delete', title_path(t), method: :delete, data: {confirm: 'Are you sure?' }, remote: true %></span>
								<h5>MemryBooks: <%= raw tag_links(t.all_tags) %></h5>
							</div>
						</div>
					</div>
				<% end %>
		</div>
	</div>
</div>
<script type="text/javascript">
$(function() {
  $('a#add_new').click(function(event){
    event.preventDefault();
    $('#title_form').show();
  });
});  
</script>

