<h1>Create a New Entry</h1>

	<%= render 'form' %>

<h3>Past Entries</h3>

<% @titles.each do |t| %>
	<div class="title" id="<%= dom_id(t) %>">
		<h3><%= t.title %></h3>
		<p><%= t.title_date %></p>
		<p><%= link_to 'View Entry', title_entries_path(t) %> <%= link_to 'Delete', title_path(t), method: :delete, data: {confirm: 'Are you sure?' } %> </p>
		<p>Tags: <%= raw tag_links(t.all_tags) %></p>
		</div>
	<% end %>