<div id="titles">
	<div class="row wrapper">
		<div class="medium-3 columns">
			<div class="user_info">
				<div class="avatar">
					<%= image_tag @user.avatar.url(:avatar) %>
					<%#= image_tag current_user.gravatar_url %>
				</div>
				<p><%= current_user.full_name  %></p>
			</div>
			<div class="user_journals">
				<p>Journals</p>
				<div class="tag_list">
					<div id="journal_titles"><%= link_to 'All Journals', titles_path %></div>
					<% @tags.each do |t| %>
						 <div id="journal_titles"><%= link_to t.name, tag_path(t.name) %></div>
				<% end %>
				</div>
			</div>

		</div>
		<div class="medium-9 columns">
			<div class="form clearfix">
				<%= render 'form' %>
			</div>
			<% @titles.each do |t| %>
				<div id="title">
					<div id="<%= dom_id(t) %>">
						<div class="header">
							<h3><%= link_to t.title, title_entries_path(t) %></h3>
							<p><%= t.title_date %></p>
						</div>
						<div class="content">
							<% @title.entries.each do |e| %>
								<%= e.entry %>
								<% end %>
						</div>
						<div class="footer">
							<span style="float:right;"><%= link_to 'Delete', title_path(t), method: :delete, data: {confirm: 'Are you sure?' } %></span>
							<h5>MemryBooks: <%= raw tag_links(t.all_tags) %></h5>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
<script type="text/javascript">
  $(function(){
    //$("input#title_all_tags").tagsinput('items')
  	$('#title_all_tags').tagsinput({
			typeahead: {                  
			    source: function(query) {
			      return $.get('<%= tag_list_titles_url %>'+'?text='+query);
			    }
		  
			  }

    });

  });  

</script>