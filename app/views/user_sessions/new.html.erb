<h1>Log In</h2>

<%= form_tag user_sessions_path do %>
	<%= label_tag :email, "Email Address" %>
	<%= text_field_tag :email, params[:email] %>
	<br />

	<%= label_tag :password, "Password" %>
	<%= text_field_tag :password %>	

<%= submit_tag "Log In" %>
<%= link_to "Forgot Password", new_password_reset_path %>
<% end %>